<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
 http://www.springframework.org/schema/context
 https://www.springframework.org/schema/context/spring-context.xsd">
    <context:component-scan base-package="com.knubisoft"/>
    <context:property-placeholder location="classpath:musicPlayer.properties"/>
    <bean id="duke"
          class="com.knubisoft.DI.Juggler">
        <constructor-arg value="15"/>
    </bean>
    <bean id="sonnet29"
          class="com.knubisoft.DI.Sonnet29"/>
    <bean id="poeticDuke"
          class="com.knubisoft.DI.PoeticJuggler">
        <constructor-arg value="15"/>
        <constructor-arg ref="sonnet29"/>
        <property name="age" value="21"/>
    </bean>
    <bean id="musicBean"
          class="com.knubisoft.scope.ClassicalMusic"
            init-method="doMyInit"
            destroy-method="doMyDestroy">

    </bean>

    <bean id="musicPlayer"
          class="com.knubisoft.scope.MusicPlayer"
          scope="prototype">
        <property name="music" ref="musicBean"/>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>
</beans>